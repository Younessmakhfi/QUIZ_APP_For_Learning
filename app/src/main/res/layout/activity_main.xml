<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/firstbackgroundd">

    <RelativeLayout
        android:id="@+id/startLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Test en \n Informatique"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/startButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/starts_button_bord"
                android:gravity="center"
                android:onClick="startOfTest"
                android:text="Start"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/shareButton2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/starts_button_bord"
                android:onClick="actionAlterResultShow"
                android:tag="600"
                android:text="Partager l'application"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/rateAsButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/starts_button_bord"
                android:onClick="rateAs"
                android:tag="600"
                android:text="Ã‰valuer l'application"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/testLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/firstbackgroundd"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Les Categories"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/itButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/ccna_border"
                android:onClick="startShowingAnswers"
                android:tag="1000"
                android:text="CCNA"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/it_border"
                android:onClick="startShowingAnswers"
                android:tag="2000"
                android:text="IT"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/windows_border"
                android:onClick="startShowingAnswers"
                android:tag="3000"
                android:text="Windows"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/linux_border"
                android:onClick="startShowingAnswers"
                android:tag="4000"
                android:text="Linux"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linuxRlaytiveLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/firstbackgroundd"
        android:visibility="gone">

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:gravity="left"
            android:text="4 min"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/numberOfQuestionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Question 0/0"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/mode_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timerTextView"
            android:layout_marginTop="5dp"
            android:background="#000"
            android:onClick="backgroundMusicControl"
            android:src="@android:drawable/ic_lock_silent_mode"
            android:tag="999" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/mode_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timerTextView"
            android:layout_marginTop="5dp"
            android:background="#000"
            android:onClick="backgroundMusicControl"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            android:tag="888"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timerTextView"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:background="#000"
            android:onClick="pause"
            android:src="@android:drawable/ic_delete"
            android:tag="312"
            android:visibility="visible" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/option">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/questionsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/quetions_border"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="chargement en cours........"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/answer0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_border"
                    android:fontFamily="@font/opensans_regular"
                    android:onClick="rghitQuestion"
                    android:padding="5dp"
                    android:tag="0"
                    android:text="chargement des questions..."
                    android:textAllCaps="false"
                    android:textSize="@dimen/quetions_text_size" />

                <Button
                    android:id="@+id/answer1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_border"
                    android:fontFamily="@font/opensans_regular"
                    android:onClick="rghitQuestion"
                    android:padding="5dp"
                    android:tag="1"
                    android:text="chargement des questions..."
                    android:textAllCaps="false"
                    android:textSize="@dimen/quetions_text_size" />

                <Button
                    android:id="@+id/answer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_border"
                    android:fontFamily="@font/opensans_regular"
                    android:onClick="rghitQuestion"
                    android:padding="5dp"
                    android:tag="2"
                    android:text="chargement des questions..."
                    android:textAllCaps="false"
                    android:textSize="@dimen/quetions_text_size" />

                <Button
                    android:id="@+id/answer3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_border"
                    android:fontFamily="@font/opensans_regular"
                    android:onClick="rghitQuestion"
                    android:padding="5dp"
                    android:tag="3"
                    android:text="chargement des questions..."
                    android:textAllCaps="false"
                    android:textSize="@dimen/quetions_text_size" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/finalResultRelatveLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/secondbackgroundd"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ccna_border"
                android:gravity="center"
                android:padding="5dp"
                android:text="97,5%"
                android:textColor="#000"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ccna_border"
                android:padding="10dp"
                android:text="Le rÃ©sultat est : 10/40"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/rateButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/windows_border"
                android:onClick="rateAs"
                android:tag="600"
                android:text="Ã‰valuer l'application"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/windows_border"
                android:onClick="actionAlterResultShow"
                android:tag="501"
                android:text="Redemarrer le Test"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button6"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/windows_border"
                android:onClick="actionAlterResultShow"
                android:tag="500"
                android:text="Les autres tests"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/shareButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/windows_border"
                android:onClick="actionAlterResultShow"
                android:tag="600"
                android:text="Partager l'application"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pause"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/secondbackgroundd"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/attention_border"
                android:gravity="center"
                android:padding="10dp"
                android:text="ATTENTION: le calcul du temps ne s'arrÃªte pas, Voulez-vous vraiment quitter ce test?"
                android:textColor="@color/red"
                android:textSize="25sp"

                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/quitter"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/attention_border"
                    android:onClick="pause"
                    android:tag="321"
                    android:text="Quitter"
                    android:textAllCaps="false"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/returne"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/attention_border"
                    android:onClick="pause"
                    android:tag="123"
                    android:text="Annuler"
                    android:textAllCaps="false"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/waitRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/pBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateDrawable="@drawable/progress"
            android:visibility="visible" />
    </RelativeLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>